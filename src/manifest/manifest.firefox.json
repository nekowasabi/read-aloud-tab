{
  "manifest_version": 2,
  "name": "Read Aloud Tab",
  "version": "1.0.0",
  "description": "Read web page content aloud using text-to-speech",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "commands": {
    "read-aloud-start": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "読み上げを開始"
    },
    "read-aloud-stop": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "読み上げを停止"
    },
    "read-aloud-next": {
      "suggested_key": {
        "default": "Ctrl+Shift+Right"
      },
      "description": "次のタブを読み上げ"
    },
    "read-aloud-prev": {
      "suggested_key": {
        "default": "Ctrl+Shift+Left"
      },
      "description": "前のタブを読み上げ"
    },
    "read-aloud-pause": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z"
      },
      "description": "読み上げを一時停止"
    },
    "read-aloud-resume": {
      "suggested_key": {
        "default": "Ctrl+Shift+R"
      },
      "description": "読み上げを再開"
    }
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
